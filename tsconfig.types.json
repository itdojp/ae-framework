{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "artifacts/types",
    "skipLibCheck": true,
    "noEmit": false,
    "strict": false,
    "noImplicitAny": false,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/agents/domain-types.ts", "src/core/assertNever.ts", "src/core/result.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "tests/**/*", "packages/**/*", "node_modules", "dist"]
}