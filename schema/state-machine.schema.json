{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/state-machine.schema.json",
  "title": "ae-state-machine",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version for the state machine schema."
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "initial": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the initial state; implementations MUST validate that this value matches the 'name' of one of the entries in the 'states' array."
    },
    "states": {
      "type": "array",
      "minItems": 1,
      "description": "List of states. State names should be unique; implementations MUST enforce uniqueness.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "entry": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "exit": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "meta": { "type": "object" }
        },
        "required": ["name"]
      }
    },
    "events": {
      "type": "array",
      "description": "List of event identifiers. Event names should be unique; implementations MUST enforce uniqueness.",
      "items": { "type": "string", "minLength": 1 }
    },
    "transitions": {
      "type": "array",
      "description": "Transitions must reference existing states/events; implementations MUST validate referential integrity.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "from": { "type": "string", "minLength": 1 },
          "to": { "type": "string", "minLength": 1 },
          "event": { "type": "string", "minLength": 1 },
          "guard": { "type": "string", "minLength": 1 },
          "actions": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "meta": { "type": "object" }
        },
        "required": ["from", "to", "event"]
      }
    },
    "metadata": { "type": "object" },
    "correlation": { "$ref": "#/$defs/correlation" }
  },
  "required": ["schemaVersion", "id", "initial", "states", "events", "transitions"],
  "$defs": {
    "correlation": {
      "type": "object",
      "properties": {
        "runId": { "type": "string" },
        "workflow": { "type": "string" },
        "commit": { "type": "string" },
        "branch": { "type": "string" },
        "traceIds": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "required": ["runId"],
      "additionalProperties": false
    }
  }
}
