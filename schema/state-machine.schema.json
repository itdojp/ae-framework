{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/state-machine.schema.json",
  "title": "ae-state-machine",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "initial": {
      "type": "string",
      "minLength": 1
    },
    "states": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["name"]
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "event": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "minLength": 1
          },
          "guard": {
            "type": "string",
            "minLength": 1
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "required": ["from", "event", "to"]
      }
    },
    "meta": {
      "type": "object"
    }
  },
  "required": ["schema_version", "id", "initial", "states", "events", "transitions"]
}
