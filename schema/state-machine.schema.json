{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/state-machine.schema.json",
  "title": "ae-state-machine",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "initial": { "type": "string" },
    "states": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "entry": {
            "type": "array",
            "items": { "type": "string" }
          },
          "exit": {
            "type": "array",
            "items": { "type": "string" }
          },
          "meta": { "type": "object" }
        },
        "required": ["name"],
        "additionalProperties": true
      }
    },
    "events": {
      "type": "array",
      "items": { "type": "string" }
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "event": { "type": "string" },
          "guard": { "type": "string" },
          "actions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "meta": { "type": "object" }
        },
        "required": ["from", "to", "event"],
        "additionalProperties": true
      }
    },
    "metadata": { "type": "object" },
    "correlation": { "$ref": "#/$defs/correlation" }
  },
  "required": ["schemaVersion", "initial", "states", "events", "transitions"],
  "additionalProperties": true,
  "$defs": {
    "correlation": {
      "type": "object",
      "properties": {
        "runId": { "type": "string" },
        "workflow": { "type": "string" },
        "commit": { "type": "string" },
        "branch": { "type": "string" },
        "traceIds": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["runId"],
      "additionalProperties": true
    }
  }
}
