{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/context-bundle.schema.json",
  "title": "ae-context-bundle",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "taskIntent": {
      "type": "string"
    },
    "systemConstraints": {
      "type": "array",
      "items": { "type": "string" }
    },
    "roles": {
      "type": "array",
      "items": { "type": "string" }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/artifact" }
    },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "openQuestions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "contextVacuum": {
      "$ref": "#/$defs/contextVacuum"
    },
    "metadata": {
      "type": "object"
    }
  },
  "required": ["schemaVersion", "taskIntent", "artifacts"],
  "additionalProperties": true,
  "$defs": {
    "artifact": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "path": { "type": "string" },
        "role": { "type": "string" },
        "description": { "type": "string" },
        "commit": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "hash": { "type": "string" },
        "source": { "type": "string" }
      },
      "required": ["type", "path"],
      "additionalProperties": true
    },
    "contextVacuum": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["ok", "missing", "unknown"]
        },
        "missing": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["status"],
      "additionalProperties": true
    }
  }
}
