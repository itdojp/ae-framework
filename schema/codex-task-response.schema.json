{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://itdojp.github.io/ae-framework/schema/codex-task-response.schema.json",
  "title": "CodexTaskResponse",
  "type": "object",
  "required": [
    "summary",
    "analysis",
    "recommendations",
    "nextActions",
    "warnings",
    "shouldBlockProgress"
  ],
  "properties": {
    "summary": {
      "type": "string"
    },
    "analysis": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "nextActions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "shouldBlockProgress": {
      "type": "boolean"
    }
  },
  "additionalProperties": true
}
