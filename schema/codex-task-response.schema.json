{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://itdojp.github.io/ae-framework/schema/codex-task-response.schema.json",
  "title": "CodexTaskResponse",
  "type": "object",
  "required": [
    "summary",
    "analysis",
    "recommendations",
    "nextActions",
    "warnings",
    "shouldBlockProgress"
  ],
  "properties": {
    "summary": {
      "type": "string"
    },
    "analysis": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "nextActions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "shouldBlockProgress": {
      "type": "boolean"
    },
    "blockingReason": {
      "type": "string",
      "minLength": 1
    },
    "requiredHumanInput": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "shouldBlockProgress": {
            "const": false
          }
        }
      },
      "then": {
        "properties": {
          "nextActions": {
            "minItems": 1
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "shouldBlockProgress": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "nextActions": {
            "minItems": 1
          },
          "warnings": {
            "minItems": 1
          }
        }
      }
    }
  ],
  "additionalProperties": true
}
