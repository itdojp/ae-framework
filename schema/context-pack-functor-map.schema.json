{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/context-pack-functor-map.schema.json",
  "title": "Context Pack Functor Mapping",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "contextPackSources",
    "objects",
    "morphisms"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "context-pack-functor-map/v1"
    },
    "contextPackSources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "moduleGlobs"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "moduleGlobs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "forbiddenImportsFrom": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "layer": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "morphisms": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "entrypoints"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "entrypoints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "file"
              ],
              "properties": {
                "file": {
                  "type": "string",
                  "minLength": 1
                },
                "symbol": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "dependencyRules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "from",
          "to",
          "allowed"
        ],
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "minLength": 1
          },
          "allowed": {
            "type": "boolean"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    }
  }
}
