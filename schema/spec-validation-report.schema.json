{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://itdojp.github.io/ae-framework/schema/spec-validation-report.schema.json",
  "title": "AE Spec Validation/Lint Report",
  "description": "Machine-readable report emitted by `ae spec lint` and `ae spec validate` when --format json is used.",
  "type": "object",
  "required": [
    "command",
    "status",
    "summary",
    "issues",
    "generatedAt"
  ],
  "properties": {
    "command": {
      "type": "string",
      "enum": [
        "lint",
        "validate"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "summary": {
      "type": "object",
      "required": [
        "errors",
        "warnings",
        "info"
      ],
      "properties": {
        "errors": {
          "type": "integer",
          "minimum": 0
        },
        "warnings": {
          "type": "integer",
          "minimum": 0
        },
        "info": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ruleId",
          "severity",
          "message"
        ],
        "properties": {
          "ruleId": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "error",
              "warning",
              "info"
            ]
          },
          "message": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "section": {
                "type": "string"
              },
              "line": {
                "type": "integer"
              },
              "column": {
                "type": "integer"
              }
            },
            "additionalProperties": false
          },
          "suggestion": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "input": {
      "type": "string"
    },
    "aeIrOutput": {
      "type": "string"
    },
    "thresholds": {
      "type": "object",
      "required": [
        "maxErrors",
        "maxWarnings"
      ],
      "properties": {
        "maxErrors": {
          "type": "integer"
        },
        "maxWarnings": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
