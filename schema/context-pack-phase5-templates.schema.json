{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ae-framework/schema/context-pack-phase5-templates.schema.json",
  "title": "Context Pack Phase5+ Templates",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "contextPackSources",
    "pullbacks",
    "pushouts",
    "monoidalFlows",
    "kleisliPipelines"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "context-pack-phase5-templates/v1"
    },
    "contextPackSources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "pullbacks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/pullbackTemplate"
      }
    },
    "pushouts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/pushoutTemplate"
      }
    },
    "monoidalFlows": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/monoidalFlowTemplate"
      }
    },
    "kleisliPipelines": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/kleisliPipelineTemplate"
      }
    }
  },
  "$defs": {
    "stringList": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "nonEmptyStringList": {
      "allOf": [
        {
          "$ref": "#/$defs/stringList"
        },
        {
          "minItems": 1
        }
      ]
    },
    "pullbackTemplate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "leftMorphismId",
        "rightMorphismId",
        "apexObjectId",
        "commutingDiagramIds",
        "evidencePaths"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "leftMorphismId": {
          "type": "string",
          "minLength": 1
        },
        "rightMorphismId": {
          "type": "string",
          "minLength": 1
        },
        "apexObjectId": {
          "type": "string",
          "minLength": 1
        },
        "commutingDiagramIds": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "evidencePaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "pushoutTemplate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "leftMorphismId",
        "rightMorphismId",
        "coapexObjectId",
        "commutingDiagramIds",
        "evidencePaths"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "leftMorphismId": {
          "type": "string",
          "minLength": 1
        },
        "rightMorphismId": {
          "type": "string",
          "minLength": 1
        },
        "coapexObjectId": {
          "type": "string",
          "minLength": 1
        },
        "commutingDiagramIds": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "evidencePaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "tensorLawCheck": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "evidencePaths"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "evidencePaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        }
      }
    },
    "monoidalFlowTemplate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "parallelMorphismIds",
        "mergeMorphismId",
        "tensorLawChecks",
        "stringDiagramPaths"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "parallelMorphismIds": {
          "allOf": [
            {
              "$ref": "#/$defs/nonEmptyStringList"
            },
            {
              "minItems": 2
            }
          ]
        },
        "mergeMorphismId": {
          "type": "string",
          "minLength": 1
        },
        "tensorLawChecks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/tensorLawCheck"
          }
        },
        "stringDiagramPaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "kleisliPipelineTemplate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "effectType",
        "morphismIds",
        "pureBoundaryMorphismIds",
        "impureBoundaryMorphismIds",
        "bindEvidencePaths",
        "sideEffectEvidencePaths"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "effectType": {
          "type": "string",
          "minLength": 1
        },
        "morphismIds": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "pureBoundaryMorphismIds": {
          "$ref": "#/$defs/stringList"
        },
        "impureBoundaryMorphismIds": {
          "$ref": "#/$defs/stringList"
        },
        "bindEvidencePaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "sideEffectEvidencePaths": {
          "$ref": "#/$defs/nonEmptyStringList"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
