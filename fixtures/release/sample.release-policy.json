{
  "schemaVersion": "ae-release-policy/v1",
  "version": 1,
  "updatedAt": "2026-02-28",
  "owner": "ae-framework",
  "rolloutStrategy": {
    "mode": "canary",
    "percentSteps": [1, 5, 25, 50, 100],
    "pauseSeconds": 300,
    "maxDurationSeconds": 7200
  },
  "healthSignals": {
    "errorRate": {
      "metricKey": "errorRate",
      "warningThreshold": 0.01,
      "criticalThreshold": 0.02,
      "comparison": "lte"
    },
    "p95LatencyMs": {
      "metricKey": "p95LatencyMs",
      "warningThreshold": 350,
      "criticalThreshold": 500,
      "comparison": "lte"
    },
    "saturation": {
      "metricKey": "saturation",
      "warningThreshold": 0.75,
      "criticalThreshold": 0.9,
      "comparison": "lte"
    }
  },
  "rollbackPolicy": {
    "enabled": true,
    "trigger": "any-critical",
    "dryRun": true,
    "hook": {
      "type": "command",
      "command": "scripts/deploy/rollback.sh",
      "timeoutSeconds": 600
    }
  },
  "requiredEvidence": [
    "postDeployVerify",
    "qualityGates",
    "conformanceSummary"
  ],
  "environments": {
    "staging": {
      "percentSteps": [10, 50, 100],
      "pauseSeconds": 120,
      "requiredEvidence": [
        "postDeployVerify",
        "qualityGates"
      ]
    },
    "production": {
      "percentSteps": [1, 5, 25, 50, 100],
      "pauseSeconds": 300,
      "requiredEvidence": [
        "postDeployVerify",
        "qualityGates",
        "conformanceSummary"
      ]
    }
  }
}
