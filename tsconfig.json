{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "vitest"],
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noEmitOnError": false,
    "allowJs": false
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts", "packages/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests", 
    "src/ui/components/generated/**/*", 
    "packages/ui/**/*",
    "**/benchmark/**/*",
    "src/benchmark",
    "src/benchmark/**",
    "src/health/health-endpoint.ts"
  ]
}