{
  "extends": "@istanbuljs/nyc-config-typescript",
  "check-coverage": true,
  "all": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "src/cli/index.ts",
    "src/index.ts",
    "tests/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "src/ui/components/generated/**/*"
  ],
  "extension": [
    ".ts",
    ".js"
  ],
  "require": [
    "tsx/cjs",
    "./scripts/nyc/tsx-module-id.cjs"
  ],
  "reporter": [
    "text",
    "lcov",
    "html",
    "json-summary"
  ],
  "report-dir": "./coverage",
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  },
  "skip-full": false,
  "produce-source-map": true
}
